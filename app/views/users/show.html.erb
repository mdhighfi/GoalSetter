<h2>User</h2>

<h3>Public Goals</h3>

<% @user.goals.each do |goal| %>
<ul>
  <li>
    <%= goal.content unless goal.private %>
  </li>
</ul>
<% end %>

<h3>Private Goals</h3>

<% @user.goals.each do |goal| %>
<ul>
  <li>
    <%= goal.content if goal.private %>
  </li>
</ul>
<% end %>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>
  <label for="goal_content">Goal: </label>
  <input type="text" name="goal[content]" id="goal_content">

  <input type="radio" name="goal[private]">
  <label for="radio">Private</label>

  <input type="radio" name="goal[private]">
  <label for="radio">Public</label>
  
  <input type="submit"value="Create Goal">

</form>

